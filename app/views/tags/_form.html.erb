<%= form_for @tag, html: {class: "form-inline", role: "form"} do |f| %>

  <% if @tag.errors.any? %>
    <div class="alert alert-warning">
      <% @tag.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="form-group">
    <input type="text" name="name">
  </div>
  <input type="submit" value="Create a New Tag" class="btn btn-sm">
<% end %>