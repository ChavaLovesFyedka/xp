   
<div class="col-sm-3 col-md-2 sidebar">
    <h3>Filters</h3>
    <ul class="nav nav-sidebar"><h4>Interest</h4>
      <li><a href="#" id="show_all">Show All Lessons</a></li>
      <li><a href="#" id="no_students">Students Needed</a></li>
      <li><a href="#" id="no_teachers">Teachers Needed</a></li>
    </ul>

<form id="filters">
    <select data-placeholder="Select Locations" style="width:350px;" multiple class="chosen-select tag-select" tabindex="8">
      <% @location_tags.each do |tag| %>
      <option id="<%= tag.id %>"><%= tag.name %></option>
      <% end %>
    </select>

    <select data-placeholder="Select Times" style="width:350px;" multiple class="chosen-select tag-select" tabindex="8">
      <% @time_tags.each do |tag| %>
      <option id="<%= tag.id %>"><%= tag.name %></option>
      <% end %>
    </select>

    <select data-placeholder="Select Topics" style="width:350px;" multiple class="chosen-select tag-select" tabindex="8">
      <% @topic_tags.each do |tag| %>
      <option id="<%= tag.id %>"><%= tag.name %></option>
      <% end %>
    </select>
  </form>
  
</div>