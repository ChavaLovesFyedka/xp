<div class="jumbotron lesson col-md-5" data-students="<%= lesson.students.length %>" data-teachers="<%= lesson.teachers.length %>" data-location="remote" data-tags="<%= lesson.tag_ids_to_array %>">
  <h1><%= link_to lesson.title, lesson %></h1>
  <p class="lead"><%= lesson.description %></p>

  <p><%= lesson.students.length %> people have signed up to take this class. 
    <%= button_to "Take This!", lesson_user_lessons_path(lesson), {:'user_lesson[role]' => "student", :class => "btn btn-success"} %></p>

    <p><%= lesson.teachers.length %> people have signed up to teach this class.
      <%= button_to "Teach This!", lesson_user_lessons_path(lesson), {:form => {'user_lesson[role]' => "teacher"}, :class => "btn btn-warning"} %></p>
    </p>
  </div>