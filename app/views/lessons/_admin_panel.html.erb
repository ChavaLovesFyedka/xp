  <h4>Admin Settings:</h4>

  <%= button_to "Close Lesson!", {:controller => "lessons", :action => "update", :lesson_id => @lesson.id, :id => @registration.id, :'registration[admin]' => "false"}, {:method => :patch, :class => "btn btn-warning"} %>

  <%= button_to "Mark Lesson Held", {:controller => "lessons", :action => "update", :lesson_id => @lesson.id, :id => @registration.id, :'registration[admin]' => "false"}, {:method => :patch, :class => "btn btn-warning" confirm: 'This will permamently archive the lesson. Are you sure?'} %>

