  <div class="form-group" id="select-locations" >
    <select data-placeholder="Select Locations" style="width:280px;" multiple class="chosen-select tag-select form-control" tabindex="8" name="lesson[locations][]">
      <% @location_tags.each do |tag| %>
      <option id="<%= tag.id %>" <%= prepopulate(@lesson, tag) %>><%= tag.name %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group" id="select-times">
    <select data-placeholder="Select Times" style="width:280px;" multiple class="chosen-select tag-select form-control" tabindex="8" name="lesson[times][]">
      <% @time_tags.each do |tag| %>
      <option id="<%= tag.id %>" <%= prepopulate(@lesson, tag) %>><%= tag.name %></option>
      <% end %>
    </select>
  </div>